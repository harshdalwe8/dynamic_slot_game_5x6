// Prisma schema for Dynamic Multi-Theme 5x6 Slot Game System
// This schema covers all required tables and relations per requirements
// Run `npx prisma migrate dev` after editing

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String            @id @default(uuid())
  email             String            @unique
  passwordHash      String
  displayName       String
  role              UserRole
  createdAt         DateTime          @default(now())
  lastLogin         DateTime?
  status            UserStatus        @default(ACTIVE)
  wallets           Wallet[]
  transactions      Transaction[]
  spins             Spin[]
  adminLogs         AdminLog[]        @relation("AdminUserLogs")
  adminTransactions Transaction[]     @relation("AdminUser")
  sessions          Session[]
  achievements      UserAchievement[]
  deposits          Deposit[]
  // Referral system
  referralCode      String?           @unique
  referredBy        User?             @relation("UserReferrals", fields: [referredById], references: [id])
  referredById      String?
  referrals         User[]            @relation("UserReferrals")
  // Offer code relations
  createdOfferCodes OfferCode[]       @relation("OfferCodeCreator")
  offerRedemptions  OfferRedemption[]
}

enum UserRole {
  SUPER_ADMIN
  GAME_MANAGER
  SUPPORT_STAFF
  PLAYER
}

enum UserStatus {
  ACTIVE
  BANNED
  DISABLED
}

model Wallet {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
  balance   Int // in coins
  currency  String   @default("COINS")
  updatedAt DateTime @updatedAt
  // No direct relation to Transaction; transactions reference user
}

model Transaction {
  id           String          @id @default(uuid())
  user         User            @relation(fields: [userId], references: [id])
  userId       String
  amount       Int
  type         TransactionType
  balanceAfter Int
  reference    String?
  reason       String
  createdAt    DateTime        @default(now())
  admin        User?           @relation("AdminUser", fields: [adminId], references: [id])
  adminId      String?
}

enum TransactionType {
  CREDIT
  DEBIT
  COUPON
  REFERRAL
  MANUAL
  SPIN
  WIN
  BONUS
  JACKPOT
}

model Theme {
  id            String         @id @default(uuid())
  name          String
  version       Int
  status        ThemeStatus
  jsonSchema    Json
  assetManifest Json
  minBet        Int            @default(10)
  maxBet        Int            @default(1000)
  createdBy     String
  createdAt     DateTime       @default(now())
  versions      ThemeVersion[]
  paylines      Payline[]
  spins         Spin[]
  rtpSnapshots  RTPSnapshot[]
}

enum ThemeStatus {
  DRAFT
  ACTIVE
  DISABLED
}

model ThemeVersion {
  id        String   @id @default(uuid())
  theme     Theme    @relation(fields: [themeId], references: [id])
  themeId   String
  version   Int
  json      Json
  assets    Json
  createdAt DateTime @default(now())
  notes     String?
}

model Spin {
  id           String   @id @default(uuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  theme        Theme    @relation(fields: [themeId], references: [id])
  themeId      String
  betAmount    Int
  resultMatrix Json
  winAmount    Int
  seed         String
  rtpApplied   Float
  createdAt    DateTime @default(now())
}

model Payline {
  id         String @id @default(uuid())
  theme      Theme  @relation(fields: [themeId], references: [id])
  themeId    String
  definition Json
}

model AdminLog {
  id         String   @id @default(uuid())
  admin      User     @relation("AdminUserLogs", fields: [adminId], references: [id])
  adminId    String
  action     String
  objectType String
  objectId   String
  payload    Json
  createdAt  DateTime @default(now())
  ip         String
}

model RTPSnapshot {
  id            String   @id @default(uuid())
  theme         Theme    @relation(fields: [themeId], references: [id])
  themeId       String
  calculatedRTP Float
  windowStart   DateTime
  windowEnd     DateTime
}

model Session {
  id           String   @id @default(uuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  refreshToken String
  createdAt    DateTime @default(now())
  expiresAt    DateTime
}

model Achievement {
  id          String            @id @default(uuid())
  code        String            @unique
  name        String
  description String
  icon        String
  requirement Json // { type: "spins", count: 100 } or { type: "total_wins", amount: 1000 }
  reward      Int // bonus coins
  category    String // "gameplay", "wins", "milestones"
  createdAt   DateTime          @default(now())
  users       UserAchievement[]
}

model UserAchievement {
  id            String      @id @default(uuid())
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  achievement   Achievement @relation(fields: [achievementId], references: [id])
  achievementId String
  unlockedAt    DateTime    @default(now())
  progress      Int         @default(0)

  @@unique([userId, achievementId])
}

model Leaderboard {
  id        String             @id @default(uuid())
  type      LeaderboardType
  period    LeaderboardPeriod
  startDate DateTime
  endDate   DateTime
  createdAt DateTime           @default(now())
  entries   LeaderboardEntry[]
}

enum LeaderboardType {
  TOTAL_WINS
  BIGGEST_WIN
  MOST_SPINS
  HIGHEST_BALANCE
}

enum LeaderboardPeriod {
  DAILY
  WEEKLY
  MONTHLY
  ALL_TIME
}

model LeaderboardEntry {
  id            String      @id @default(uuid())
  leaderboard   Leaderboard @relation(fields: [leaderboardId], references: [id])
  leaderboardId String
  userId        String
  userEmail     String
  displayName   String
  score         Int
  rank          Int
  createdAt     DateTime    @default(now())

  @@unique([leaderboardId, userId])
}

// Admin-issued offer codes (promo/coupon system)
model OfferCode {
  id          String            @id @default(uuid())
  code        String            @unique
  amount      Int
  active      Boolean           @default(true)
  maxUsage    Int?
  usageCount  Int               @default(0)
  startsAt    DateTime          @default(now())
  endsAt      DateTime?
  createdAt   DateTime          @default(now())
  createdBy   User?             @relation("OfferCodeCreator", fields: [createdById], references: [id])
  createdById String?
  redemptions OfferRedemption[]
}

// Track which user redeemed which offer code
model OfferRedemption {
  id          String    @id @default(uuid())
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  offerCode   OfferCode @relation(fields: [offerCodeId], references: [id])
  offerCodeId String
  createdAt   DateTime  @default(now())

  @@unique([userId, offerCodeId])
}

// UPI Payment Links (template)
model PaymentLink {
  id          String   @id @default(uuid())
  name        String
  payeeVPA    String   // pa: merchant's UPI ID
  payeeName   String   // pn: merchant's display name
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  createdBy   String
  updatedAt   DateTime @updatedAt
  deposits    Deposit[]
}

// User deposit requests
model Deposit {
  id               String       @id @default(uuid())
  user             User         @relation(fields: [userId], references: [id])
  userId           String
  paymentLink      PaymentLink  @relation(fields: [paymentLinkId], references: [id])
  paymentLinkId    String
  amount           Int          // in cents (e.g., 10000 = 100 INR)
  currency         String       @default("INR")
  transactionRef   String       @unique // 12-char alphanumeric
  screenshotUrl    String?      // path to uploaded screenshot
  status           DepositStatus @default(PENDING)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
}

enum DepositStatus {
  PENDING          // Awaiting payment confirmation
  SCREENSHOT_UPLOADED // User uploaded screenshot
  APPROVED         // Admin approved, wallet credited
  REJECTED         // Admin rejected
}
